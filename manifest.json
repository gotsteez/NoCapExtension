{
  "content_security_policy": "script-src 'self' https://.google.com https://.gstatic.com; object-src 'self'",
  "manifest_version": 2,
  "name": "NoCap",
  "version": "1.0",

  "description": "Loads captcha and has you solve captcha",
  "homepage_url": "https://github.com/zMrKrabz/NoCapExtension",

  "permissions": ["activeTab"],

  "browser_action": {
    "default_title": "NoCap",
    "default_popup": "popup/index.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.example.com/*"],
      "js": ["/content_scripts/recaptcha.js"]
    }
  ]
}
